@model BloggyTwo.Models.BlogPost

@{
    ViewData["Title"] = "Delete Blog Post (Admin)";
}

<h2>Delete Blog Post (Admin)</h2>

<p>Are you sure you want to delete this post?</p>

<div>
    <h3>@Model.Title</h3>
    <p>@Model.Content</p>
</div>

<form asp-action="DeletePost" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button> |
    <a href="/Admin/BlogPosts">Cancel</a>
</form>
