@model List<BloggyTwo.Models.AppUserData>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user and all their posts?');">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="/Admin/BlogPosts">Manage Blog Posts</a> | <a href="/">Home</a></p>
