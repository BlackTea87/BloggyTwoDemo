@model List<BloggyTwo.Models.BlogPost>

@{
    ViewData["Title"] = "All Blog Posts";
}

<h2 class="mb-4 text-center">All Blog Posts</h2>

@if (!Model.Any())
{
    <p class="text-center">No posts available.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Responsive grid: 1 column on xs, 3 on md+ -->
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-truncate" style="max-height: 5em; overflow: hidden;">
                            @post.Content
                        </p>
                        <div class="mt-auto">
                            <small class="text-muted">By @post.Author.UserName on @post.Created.ToLocalTime().ToString("g")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}